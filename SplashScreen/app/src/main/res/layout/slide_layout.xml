<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="154dp"
        android:layout_height="163dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        app:srcCompat="@drawable/eat_icon" />

    <TextView
        android:id="@+id/slideHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:text="HEADING"
        android:textColor="@color/onboardingWhite"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/slideContent"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="104dp"
        android:textSize="18sp"
        android:padding="35dp"
        android:gravity="center"
        android:textColor="@color/onboardingTransparentWhite"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut." />
</RelativeLayout>
