<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/einsteinImageView"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/einstein_show"
            app:layout_constraintBottom_toBottomOf="@+id/goodbyeMachinesTextView"
            app:layout_constraintLeft_toLeftOf="@+id/goodbyeMachinesTextView" />

        <TextView
            android:id="@+id/goodbyeMachinesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E = mc^2 !"
            android:textSize="32sp"
            android:elevation="2dp"
            android:layout_gravity="center"/>
        
        <EditText
            android:id="@+id/nameEditInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter your Name"/>

        <Button
            android:id="@+id/clickMeButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#00FFFF"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>