<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/innerImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/recommended_1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeInside"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_black">

                <TextView
                    android:id="@+id/strikeOutTextView"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="12dp"
                    android:text="StrikeoutText"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/newPriceTextView"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/strikeOutTextView"
                    android:layout_below="@+id/strikeOutTextView"
                    android:text="NewPrice"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/percentOffTextView"
                    android:layout_width="77dp"
                    android:layout_height="29dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/strikeOutTextView"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="XX% OFF"
                    android:textColor="@android:color/holo_orange_light" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gradient_black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3.5dp"
                    android:text="0.3 km"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/heartImageView"
                android:layout_width="42dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="11dp"
                app:srcCompat="@drawable/ic_white_heart" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="103dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13dp"
                android:text="OYO 15959 The City Park Deluxe"
                android:fontFamily="@font/db_thaitext"
                android:textColor="#000000"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/bodyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/db_thaitext"
                android:text="Abids, Hyderabad"
                android:textColor="#111111"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="37dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/titleTextView"
                android:layout_marginBottom="12dp"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@android:color/white"
                android:background="#58AC00"
                android:text="4.2" />

            <TextView
                android:id="@+id/ratingInTextView"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_alignTop="@+id/ratingTextView"
                android:layout_toEndOf="@+id/ratingTextView"
                android:text="Very Good"
                android:background="#E9F4DE"
                android:textColor="#58AC00"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/numberOfRatingsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ratingTextView"
                android:layout_marginStart="138dp"
                android:text="424 Ratings" />

            <!--<ImageView-->
                <!--android:id="@+id/nextImageView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_below="@+id/bodyTextView"-->
                <!--android:layout_toEndOf="@+id/numberOfRatingsTextView"-->
                <!--app:srcCompat="@drawable/next_icon" />-->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>